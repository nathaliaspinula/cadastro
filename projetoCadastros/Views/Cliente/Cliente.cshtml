@model List<projetoCadastros.Models.Cliente>
@{
    ViewBag.Title = "Cliente";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Editar</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" media="screen" href="/content/css/style.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="title">
                <h2>Usuários</h2>
            </div>
            <div class="description">
                <table>
                <thead>
                    <tr>
                        <th style="min-width: 100px;">Nome</th>
                        <th style="min-width: 100px;">Logradouro</th>
                        <th style="min-width: 100px;">UF</th>
                        <th style="min-width: 100px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Enderecos.FirstOrDefault().Logradouro</td>
                                <td>@cliente.Enderecos.FirstOrDefault().UF</td>
                                <td><a href="@Url.Action("EditarCliente", "Cliente" , new {codCliente = cliente.Id})" style="margin-right: 15px;">Editar</a>
                                    <a href="@Url.Action("ExcluirCliente", "Cliente" , new {codCliente = cliente.Id})" style="margin-right: 15px;">Excluir</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                </table>
            </div>
        </div>
    </body>
</html>