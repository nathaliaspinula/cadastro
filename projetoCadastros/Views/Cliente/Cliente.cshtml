@model List<projetoCadastros.Models.Cliente>
@{
    ViewBag.Title = "Cliente";
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link rel="stylesheet" href="~/Content/css/style.css">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <title>Clientes</title>
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li>
                        <a href="@Url.Action("IndexClientes","Cliente")">Usuarios</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Cliente")">Cadastrar</a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-home"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </header>
        <div class="container">
            <div class="title">
                <h2>Usuários</h2>
            </div>
            <div class="description">
                <table>
                <thead>
                    <tr>
                        <th style="min-width: 100px;">Nome</th>
                        <th style="min-width: 100px;">Logradouro</th>
                        <th style="min-width: 100px;">UF</th>
                        <th style="min-width: 100px;">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.Nome</td>
                                <td>@cliente.Enderecos.FirstOrDefault().Logradouro</td>
                                <td>@cliente.Enderecos.FirstOrDefault().UF</td>
                                <td><a href="@Url.Action("EditarCliente", "Cliente" , new {codCliente = cliente.Id})" style="margin-right: 15px;">Editar</a>
                                    <a href="@Url.Action("ExcluirCliente", "Cliente" , new {codCliente = cliente.Id})" style="margin-right: 15px;">Excluir</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
                </table>
            </div>
        </div>
    </body>
</html>