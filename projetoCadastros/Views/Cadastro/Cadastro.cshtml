@{
    ViewBag.Title = "Cadastro";

}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Cadastro</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" type="text/css" media="screen" href="/content/css/style.css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Noto+Sans" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <div class="title">
                <h2>Cadastrar</h2>
            </div>
            <div class="description">
                <form id="cadastro" action='@Url.Action("SalvarCadastros","Cadastro")' method="POST">
                    <div class="input-group">
                        <label for="nome">Nome:</label>
                        <input type="text" maxlength="100" id="nome" name="nome">
                    </div>
                    <div class="input-group">
                        <label for="telefone">Telefone:</label>
                        <input type="tel" maxlength="11" id="telefone" name="telefone">  
                    </div>
                    <div class="input-group">
                        <label for="cep">CEP:</label>
                        <input type="text" maxlength="8" id="cep" name="cep"> 
                    </div>
                    <div class="input-group">
                        <label for="logradouro">Logradouro:</label>
                        <input type="text" maxlength="150" id="logradouro" name="logradouro">
                    </div>
                    <div class="input-group">
                        <label for="complemento">Complemento:</label>
                        <input type="text" maxlength="20" id="complemento" name="complemento">
                    </div>
                    <div class="input-group">
                        <label for="bairro">Bairro:</label>
                        <input type="text" maxlength="8" id="bairro" name="bairro">
                    </div>
                    <div class="input-group">
                        <label for="localidade">Localidade:</label>
                        <input type="text" maxlength="8" id="localidade" name="localidade">
                    </div>
                    <div class="input-group">
                        <label for="uf">UF:</label>
                        <input type="text" maxlength="8" id="uf" name="uf">
                    </div>
                    <input type="submit" name="btn-submit" value="Salvar"/>
                </form>
            </div>
        </div>
    </body>
</html>
<script>
    var form = $('#cadastro').serialize();
    $('#cep').keyup(function () {
        var cep = $("#cep").val();
        console.log(cep);
        if (cep.length == 8) {
            $.ajax({
                url: '@Url.Action("BuscaCep","Cadastro")',
                dataType: "json",
                data: { cep },
                error: function () {
                    alert("erro");
                },
                success: function (endereco) {
                    $("#cep").val(endereco.cep);
                    $("#logradouro").val(endereco.logradouro);
                    $("#logradouro").attr("readonly",true);
                    $("#bairro").val(endereco.bairro);
                    $("#bairro").attr("readonly", true);
                    $("#cidade").val(endereco.cidade);
                    $("#cidade").attr("readonly", true);
                    $("#localidade").val(endereco.localidade);
                    $("#localidade").attr("readonly", true);
                    $("#uf").val(endereco.uf);
                    $("#uf").attr("readonly", true);
                }
            });
        }
    });

</script>